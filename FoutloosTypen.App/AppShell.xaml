<?xml version="1.0" encoding="UTF-8"?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:FoutloosTypen.Views"
       x:Class="FoutloosTypen.AppShell">

    <Shell.FlyoutHeader>
        <VerticalStackLayout Padding="16" Spacing="4">
            <Label Text="Foutloos Typen" FontSize="24" FontAttributes="Bold" />
            <Label Text="Leeromgeving" FontSize="14" />
        </VerticalStackLayout>
    </Shell.FlyoutHeader>

    <TabBar>
        <Tab Title="Inloggen" Icon="dotnet_bot.png">
            <ShellContent Title="Login" ContentTemplate="{DataTemplate views:LoginView}" />
        </Tab>
        <Tab Title="Lessen" Icon="dotnet_bot.png">
            <ShellContent Title="Lessen" ContentTemplate="{DataTemplate views:LessonView}" />
        </Tab>
    </TabBar>
</Shell>
