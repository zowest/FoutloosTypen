<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="FoutloosTypen.Views.AssignmentView"
    Title="Opdracht"
    BackgroundColor="White">
    <ContentPage.Content>
        <Grid RowDefinitions="Auto,*,Auto" Padding="12">
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <HorizontalStackLayout
                    Grid.Column="0"
                    Spacing="24"
                    VerticalOptions="Center"
                    HorizontalOptions="StartAndExpand">
                    <Button Text="BolType"
                            BackgroundColor="Transparent"
                            BorderWidth="0"
                            WidthRequest="140"
                            HeightRequest="80"
                            FontSize="34"
                            FontAttributes="Bold"
                            FontFamily="OpenSansSemibold"
                            CornerRadius="0"
                            Padding="2" />
                </HorizontalStackLayout>

                <HorizontalStackLayout 
                    Grid.Column="1" 
                    Spacing="12"
                    VerticalOptions="Center" 
                    HorizontalOptions="End" 
                    Margin="0,0,16,0"
                    BackgroundColor="Transparent">

                    <ImageButton Source="person.png"
                                 Command="{Binding ProfileCommand}"
                                 BackgroundColor="Transparent"
                                 BorderColor="Transparent"
                                 BorderWidth="0"
                                 CornerRadius="0"
                                 Padding="0"
                                 WidthRequest="48"
                                 HeightRequest="48"
                                 Aspect="AspectFit" >
                        <ImageButton.GestureRecognizers>
                            <PointerGestureRecognizer
                                PointerEntered="OnHoverEnter"
                                PointerExited="OnHoverExit"/>
                        </ImageButton.GestureRecognizers>
                    </ImageButton>
                    <ImageButton Source="home.png"
                                 Clicked="OnHomeClicked"
                                 BackgroundColor="Transparent"
                                 BorderColor="Transparent"
                                 BorderWidth="0"
                                 CornerRadius="0"
                                 Padding="0"
                                 WidthRequest="48"
                                 HeightRequest="48"
                                 Aspect="AspectFit" >
                        <ImageButton.GestureRecognizers>
                            <PointerGestureRecognizer
                                PointerEntered="OnHoverEnter"
                                PointerExited="OnHoverExit"/>
                        </ImageButton.GestureRecognizers>
                    </ImageButton>
                </HorizontalStackLayout>
            </Grid>



            <VerticalStackLayout 
                Grid.Row="1" 
                Spacing="12" 
                HorizontalOptions="FillAndExpand" 
                VerticalOptions="CenterAndExpand">
                <Label Text="{Binding TimeRemainingFormatted}"
                   FontSize="26"
                   VerticalOptions="End"
                       TextColor="MediumPurple"
            HorizontalOptions="Center"/>
                <ScrollView 
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="CenterAndExpand">
                    <Frame 
                        BackgroundColor="Transparent"
                        Padding="24"
                        HorizontalOptions="Center"
                        VerticalOptions="Center">

                        <!-- Character-by-character display -->
                        <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                            <!-- Formatted text with colored characters -->
                            <Label FormattedText="{Binding FormattedText}"
                                   FontSize="32"
                                   HorizontalTextAlignment="Center"
                                   VerticalTextAlignment="Center"
                                   LineBreakMode="WordWrap"
                                   MaximumWidthRequest="800" />

                            <!-- Hidden Entry to capture keyboard input -->
                            <Entry x:Name="HiddenEntry"
                                   Text="{Binding UserInput, Mode=TwoWay}"
                                   TextChanged="OnTextChanged"
                                   Focused="OnEntryFocused"
                                   Unfocused="OnEntryUnfocused"
                                   Opacity="0"
                                   HeightRequest="0"
                                   IsEnabled="True" />

                            <!-- Tap area to focus the hidden entry -->
                            <BoxView HeightRequest="100"
                                     WidthRequest="800"
                                     Color="Transparent"
                                     HorizontalOptions="Center">
                                <BoxView.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnTapToFocus" />
                                </BoxView.GestureRecognizers>
                            </BoxView>
                        </VerticalStackLayout>
                    </Frame>
                </ScrollView>

                <Button Text="â†»" Command="{Binding RefreshCommand}"
                        BackgroundColor="Transparent"
                        TextColor="Black"
                        FontSize="50"
                        WidthRequest="70"
                        HeightRequest="70"
                        HorizontalOptions="Center" >
                    <Button.GestureRecognizers>
                        <PointerGestureRecognizer
                            PointerEntered="OnHoverEnter"
                            PointerExited="OnHoverExit"/>
                    </Button.GestureRecognizers>
                </Button>
            </VerticalStackLayout>

            <HorizontalStackLayout Grid.Row="2" HorizontalOptions="Center" Spacing="30">
            </HorizontalStackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>