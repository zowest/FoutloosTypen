<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    BackgroundColor="White"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="FoutloosTypen.Views.LessonView"
    Title="Lessen">
    <ContentPage.Content>
        <Grid ColumnSpacing="0">
        <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
        <!-- Cursus kolom -->
            <ScrollView Grid.Column="0">
                <VerticalStackLayout 
                    HorizontalOptions="Center" 
                    VerticalOptions="Center" 
                    Spacing="20">
                    <Label Text="Cursussen" 
                           FontSize="22" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center"
                           TextColor="Black"/>
                    <CollectionView ItemsSource="{Binding CoursesVM.Courses}" 
                            SelectionMode="Single"
                            SelectedItem="{Binding CoursesVM.SelectedCourse}">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Vertical" ItemSpacing="20" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Button Text="{Binding Name}"
                                    MinimumHeightRequest="100"
                                    FontSize="30"
                                    BackgroundColor="White"
                                    BorderColor="Black"
                                    BorderWidth="2"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, 
                                      Path=BindingContext.CoursesVM.SelectCourseCommand}"
                                        CommandParameter="{Binding}">
                                    <Button.GestureRecognizers>
                                        <PointerGestureRecognizer PointerEntered="OnHoverEnter"
                                              PointerExited="OnHoverExit" />
                                    </Button.GestureRecognizers>
                                </Button>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </ScrollView>

            <BoxView Grid.Column="1" 
                     WidthRequest="2" 
                     Color="Black" 
                     VerticalOptions="FillAndExpand"/>


        <!-- Lessons kolom -->
        <VerticalStackLayout 
                Grid.Column="2"
                HorizontalOptions="Center" 
                VerticalOptions="FillAndExpand"
                Spacing="40">
                <CollectionView ItemsSource="{Binding LessonsVM.Lessons}" 
                                SelectionMode="Single" 
                                SelectedItem="{Binding LessonsVM.SelectedLesson}"
                                VerticalOptions="CenterAndExpand">
                <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical" 
                                           ItemSpacing="40" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border WidthRequest="100" 
                                    HeightRequest="60" Padding="0" 
                                    HorizontalOptions="Center" 
                                    StrokeShape="RoundRectangle 25">
                                <Label x:Name="HoverButton" 
                                    Text="{Binding Name}" 
                                       VerticalOptions="Center" 
                                       HorizontalOptions="Center" WidthRequest="75" 
                                       HorizontalTextAlignment="Center" 
                                       FontSize="25"
                                       TextColor="Black"/>
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, 
                                            Path=BindingContext.SelectLessonCommand}" 
                                            CommandParameter="{Binding}"/>
                                    <PointerGestureRecognizer
                                        PointerEntered="OnHoverEnter"
                                        PointerExited="OnHoverExit"></PointerGestureRecognizer>
                                </Border.GestureRecognizers>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Label Text="Start"
                       HorizontalOptions="Center"
                       FontSize="40"
                       TextColor="Black"/>
            </VerticalStackLayout>

            <BoxView Grid.Column="3" 
                     WidthRequest="2" 
                     Color="Black" 
                     VerticalOptions="FillAndExpand"/>

            <!-- Description kolom -->
            <VerticalStackLayout 
                Grid.Column="4" 
                HorizontalOptions="Center" 
                VerticalOptions="Center" 
                Spacing="20">
                <Label Text="{Binding LessonsVM.SelectedLesson.Name}" 
                        FontSize="40" 
                        WidthRequest="500" 
                        HorizontalTextAlignment="Center" 
                        VerticalTextAlignment="Start" 
                        LineBreakMode="WordWrap"
                        TextColor="Black"/>
                <Label Text="☆ ☆ ☆"
                       HorizontalOptions="Center"
                       TextColor="Black"
                       FontSize="160"/>
                <Label Text="Score: 0" 
                       HorizontalOptions="Center"
                       TextColor="Black"/>
                <Label Text="Beschrijving" 
                       FontSize="26" 
                       FontAttributes="Bold" 
                       HorizontalOptions="Center"
                       TextColor="Black"/>
                <Label Text="{Binding LessonsVM.SelectedLesson.Description}" 
                       FontSize="18" 
                       WidthRequest="500" 
                       HorizontalTextAlignment="Center" 
                       VerticalTextAlignment="Center" 
                       LineBreakMode="WordWrap"
                       TextColor="Black"/>
                <Button Text="▶"
                       HorizontalOptions="Center"
                       FontSize="100"
                       TextColor="Black"
                       Clicked="OnPlayClicked"
                       BackgroundColor="White">
                    <Button.GestureRecognizers>
                        <PointerGestureRecognizer
                        PointerEntered="OnHoverEnter"
                        PointerExited="OnHoverExit"/>
                    </Button.GestureRecognizers>
                </Button>
            </VerticalStackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
