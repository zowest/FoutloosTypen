<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:FoutloosTypen.ViewModels"
             x:Class="FoutloosTypen.Views.LessonView"
             Title="Lessen">

    <Grid ColumnDefinitions="2*, 1*, 3*" Padding="10" x:Name="root">

        <ScrollView Grid.Column="0">
            <VerticalStackLayout Spacing="12">
                <Label Text="Cursussen"
                       FontAttributes="Bold"
                       FontSize="20"/>
                <Frame Padding="15" BorderColor="Black">
                    <Label Text="Cursus 1"/>
                </Frame>
                <Frame Padding="15" BorderColor="Black">
                    <Label Text="Cursus 2"/>
                </Frame>
                <Frame Padding="15" BorderColor="Black">
                    <Label Text="Cursus 3"/>
                </Frame>
                <Frame Padding="15" BorderColor="Black">
                    <Label Text="Cursus 4"/>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>


        <ScrollView Grid.Column="1">
            <VerticalStackLayout Spacing="20"
                                 HorizontalOptions="Center">

                <Label Text="Lessen"
                       FontAttributes="Bold"
                       FontSize="20"
                       HorizontalOptions="Center"/>

                <CollectionView ItemsSource="{Binding Lessons}"
                                SelectionMode="Single"
                                SelectedItem="{Binding SelectedLesson}">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical" ItemSpacing="20"/>
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Ellipse WidthRequest="40"
                                         HeightRequest="40"
                                         Fill="DodgerBlue"
                                         Stroke="Black"
                                         StrokeThickness="1"/>

                                <Label Text="+"
                                       FontSize="28"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       TextColor="White"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>

                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>


        <!-- RIGHT SIDE: LESSON DETAILS -->
        <ScrollView Grid.Column="2">
            <VerticalStackLayout Padding="10" Spacing="12">

                <Label Text="{Binding SelectedLesson.Name}"
                       FontAttributes="Bold"
                       FontSize="26"
                       IsVisible="{Binding SelectedLesson}"/>

                <HorizontalStackLayout IsVisible="{Binding SelectedLesson}">
                    <Label Text="★" FontSize="32" TextColor="Gold"/>
                    <Label Text="★" FontSize="32" TextColor="Gray"/>
                    <Label Text="★" FontSize="32" TextColor="Gray"/>
                </HorizontalStackLayout>

                <Label Text="Score: 0"
                       FontSize="18"
                       IsVisible="{Binding SelectedLesson}"/>

                <Frame BorderColor="Black"
                       CornerRadius="8"
                       Padding="10"
                       IsVisible="{Binding SelectedLesson}">
                    <Label Text="{Binding SelectedLesson.Description}"
                           FontSize="16"/>
                </Frame>

                <Button Text="Start"
                        BackgroundColor="Black"
                        TextColor="White"
                        HeightRequest="50"
                        IsVisible="{Binding SelectedLesson}"/>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>

</ContentPage>