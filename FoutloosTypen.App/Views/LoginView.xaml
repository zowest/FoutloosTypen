<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    BackgroundColor="White"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="FoutloosTypen.Views.LoginView">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Image 
            Grid.Row="0"
            Source="boltype.png"
            HeightRequest="140"
            WidthRequest="140"
            HorizontalOptions="Center"
            VerticalOptions="End" 
            Margin="0,0,0,10" />

        <Frame
            Grid.Row="1"
            CornerRadius="20"
            BorderColor="#D0D0D0"
            HasShadow="False"
            BackgroundColor="White"
            Padding="30"
            WidthRequest="420"
            HorizontalOptions="Center"
            VerticalOptions="Center">

            <VerticalStackLayout Spacing="25">

                <Label Text="BolType"
                       FontSize="28"
                       TextColor="Black"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />

                <VerticalStackLayout Spacing="6">
                    <Label Text="Gebruikersnaam"
                           TextColor="#444"
                           FontSize="14" />

                    <Frame BorderColor="#D0D0D0"
                           CornerRadius="8"
                           HasShadow="False"
                           Padding="10"
                           BackgroundColor="White">
                        <Entry Text="{Binding Username}"
                               Placeholder="Gebruikersnaam"
                               TextColor="Black"
                               PlaceholderColor="#AAA" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="6">
                    <Label Text="Wachtwoord"
                           TextColor="#444"
                           FontSize="14" />

                    <Frame BorderColor="#D0D0D0"
                           CornerRadius="8"
                           HasShadow="False"
                           Padding="10"
                           BackgroundColor="White">
                        <Entry 
                               IsPassword="True"
                               Placeholder="Wachtwoord"
                               Text="{Binding Password}"
                               TextColor="Black"
                               PlaceholderColor="#AAA" />
                    </Frame>
                </VerticalStackLayout>

                <Label Text="{Binding LoginMessage}"
                       TextColor="Red"
                       FontSize="14"
                       HorizontalOptions="Center"
                       HeightRequest="20"
                       Margin="0,-10,0,0" />

                <Button Text="Log in"
        Command="{Binding LoginCommand}"
        HeightRequest="48"
        CornerRadius="24"
        TextColor="White"
        BackgroundColor="#9c9c9c">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroupList>
                            <VisualStateGroup x:Name="CommonStates">

                                <VisualState x:Name="Normal">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#9c9c9c" />
                                    </VisualState.Setters>
                                </VisualState>

                                <VisualState x:Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#cccccc" />
                                    </VisualState.Setters>
                                </VisualState>

                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#b5b5b5" />
                                    </VisualState.Setters>
                                </VisualState>

                            </VisualStateGroup>

                        </VisualStateGroupList>
                    </VisualStateManager.VisualStateGroups>
                </Button>
            </VerticalStackLayout>

        </Frame>

    </Grid>
</ContentPage>
